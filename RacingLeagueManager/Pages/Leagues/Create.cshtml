@page
@model RacingLeagueManager.Pages.Leagues.CreateModel
@using RacingLeagueManager.Data.Models

@inject UserManager<Driver> UserManager

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>League</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="League.Name" class="control-label"></label>
                <input asp-for="League.Name" class="form-control" />
                <span asp-validation-for="League.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="League.Description" class="control-label"></label>
                <input asp-for="League.Description" class="form-control" />
                <span asp-validation-for="League.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="League.IsPublic" /> Is public @*@Html.DisplayNameFor(model => model.IsPublic))*@
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="League.CreatedDate" class="control-label"></label>
                <input asp-for="League.CreatedDate" class="form-control" />
                <span asp-validation-for="League.CreatedDate" class="text-danger"></span>
            </div>
            
            <input asp-for="League.OwnerId" type="hidden" value="@UserManager.GetUserId(User)" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

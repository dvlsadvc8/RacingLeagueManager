@page
@model RacingLeagueManager.Pages.RaceResult.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RaceResult[0].Race)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RaceResult[0].SeriesEntry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RaceResult[0].Place)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RaceResult[0].Points)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.RaceResult) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Race.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeriesEntry.SeriesId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Place)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Points)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

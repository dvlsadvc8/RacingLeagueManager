@page
@model RacingLeagueManager.Pages.Series.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>@Html.DisplayFor(model => model.Series.Name)</h2>

<div>
    <hr />
    @Html.DisplayFor(model => model.Series.Description)




    <h3>Entries</h3>
    @*<p>
            <a asp-page="../Series/Create">Add Member</a>
        </p>*@
    <table class="table">
        <tr>
            <th>Race Number</th>
            <th>Driver Name</th>
            <th>Car</th>
        </tr>
        @foreach (var item in Model.Series.Entries)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LeagueDriver.RaceNumber)
                </td>
                <td>
                    <a asp-page="../Driver/Details" asp-route-id="@item.LeagueDriver.DriverId">@Html.DisplayFor(modelItem => item.LeagueDriver.Driver.UserName)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car.Name)
                </td>
            </tr>
        }
    </table>
    <h3>Race Schedule</h3>
    <p>
        <a asp-page="../Race/Create" asp-route-seriesId="@Model.Series.Id">Add Race</a>
    </p>
    <table class="table">
        <tr>
            <th>Track</th>
            <th>Laps</th>
            <th>Date</th>
        </tr>
        @foreach (var item in Model.Series.Races)
        {
            <tr>
                <td>
                    <a asp-page="../Race/Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Track.Name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Laps)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RaceDate)
                </td>
            </tr>
        }
    </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Series.Id">Edit</a> |
    <a asp-page="../Leagues/Details" asp-route-id="@Model.Series.LeagueId">Back to League</a>
</div>

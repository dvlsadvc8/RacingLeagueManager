@model RacingLeagueManager.Pages.Series.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>@Html.DisplayFor(model => model.Series.Name)</h2>

<div>
    <a asp-page="../Team/Index" asp-route-seriesId="@Model.Series.Id">Teams</a> |
    <a asp-page="../Team/Index" asp-route-seriesId="@Model.Series.Id">Standings</a>
   <hr />

    <div class="panel panel-default">
        <div class="panel-heading"><strong>Details</strong></div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-2 font-bold">@Html.DisplayNameFor(model => model.Series.Owner)</div>
                <div class="col-md-10 font-bold">@Html.DisplayNameFor(model => model.Series.Description)</div>
            </div>
            <div class="row">
                <div class="col-md-2">@Html.DisplayFor(model => model.Series.Owner.UserName)</div>
                <div class="col-md-10">@Html.DisplayFor(model => model.Series.Description)</div>
            </div>
        </div>
    </div>


    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-md-10"><strong>Race Schedule</strong></div>
                <div class="col-md-2"><a asp-page="../Race/Create" asp-route-seriesId="@Model.Series.Id">Add Race</a></div>
            </div>
        </div>
        <div class="panel-body">
            <table class="table">
                <tr>
                    <th>Track</th>
                    <th>Laps</th>
                    <th>Date</th>
                    <th></th>
                </tr>
                @foreach (var item in Model.Series.Races)
                {
                    <tr>
                        <td>
                            <a asp-page="../Race/Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Track.Name)</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Laps)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RaceDate)
                        </td>
                        <td>
                            <a asp-page="../Race/Details" asp-route-id="@item.Id">Results</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>

    
    




@page
@model JoinLeagueModel
@{
}

<h2>Join league</h2>

<h4>Are you sure you want to join @Model.LeagueName?</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <input asp-for="@Model.LeagueId" type="hidden" />
                <input type="submit" value="Join League" class="btn btn-default" />
                <input type="button" value="Cancel" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


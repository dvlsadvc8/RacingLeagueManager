@model RacingLeagueManager.Pages.Race.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>@Model.Race.Series.Name</h2>
<h4>@Model.Race.Track.Name</h4>

<div>
    <h4>Race</h4>
    <hr />

@page
@model RacingLeagueManager.Pages.SeriesEntry.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>@Model.SeriesEntry.Series.Name</h2>

<h4>Create Entry for @Model.SeriesEntry.Team.Name Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="SeriesEntry.SeriesId" class="control-label"></label>
                <select asp-for="SeriesEntry.SeriesId" class="form-control" asp-items="ViewBag.SeriesId"></select>*@
                <input asp-for="SeriesEntry.SeriesId" type="hidden" />
                <input asp-for="SeriesEntry.TeamId" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="SeriesEntry.RaceNumber" class="control-label"></label>
                <input asp-for="SeriesEntry.RaceNumber" class="form-control" />
                <span asp-validation-for="SeriesEntry.RaceNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeriesEntry.CarId" class="control-label"></label>
                <select asp-for="SeriesEntry.CarId" class="form-control" asp-items="ViewBag.CarId"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Team/Details" asp-route-id="@Model.SeriesEntry.TeamId">Back to @Model.SeriesEntry.Team.Name</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

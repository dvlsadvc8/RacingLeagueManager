        <a asp-page="../Race/Create">Add Race</a>
    </p>*@
    <table class="table">
        <tr>
            <th>Place</th>
            <th>Driver</th>
            <th>Race No.</th>
            <th>Car</th>
            <th>Team</th>

            <th>Points</th>
            <th>Best Lap</th>
            <th>Total Time</th>
            <th></th>
        </tr>
        @*@foreach (var item in Model.Race.Results)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Place)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SeriesEntry.LeagueDriver.Driver.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SeriesEntry.LeagueDriver.RaceNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SeriesEntry.Car.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Points)
                </td>
            </tr>
        }*@
        @foreach (var item in Model.Race.Series.SeriesEntries)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RaceResults.FirstOrDefault(r => r.RaceId == Model.Race.Id).Place)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RaceResults.FirstOrDefault(r => r.RaceId == Model.Race.Id).Driver.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RaceNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Car.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.RaceResults.FirstOrDefault(r => r.RaceId == Model.Race.Id).Points)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RaceResults.FirstOrDefault(r => r.RaceId == Model.Race.Id).BestLap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RaceResults.FirstOrDefault(r => r.RaceId == Model.Race.Id).TotalTime)
            </td>
            <td>
                <a asp-page="../RaceResult/Create" asp-route-raceId="@Model.Race.Id" asp-route-seriesEntryId="@item.Id">Add Result</a>
            </td>
        </tr>
        }
    </table>
</div>
<div>

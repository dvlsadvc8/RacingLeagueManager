@page
@model RacingLeagueManager.Pages.Race.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Race</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Race.TrackId" class="control-label"></label>
                <select asp-for="Race.TrackId" class ="form-control" asp-items="ViewBag.TrackId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Race.RaceDate" class="control-label"></label>
                <input asp-for="Race.RaceDate" class="form-control" type="date" />
                <span asp-validation-for="Race.RaceDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Race.Laps" class="control-label"></label>
                <input asp-for="Race.Laps" class="form-control" />
                <span asp-validation-for="Race.Laps" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Race.SeriesId" type="hidden" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Series/Details" asp-route-id="@Model.Race.SeriesId">Back to Series</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

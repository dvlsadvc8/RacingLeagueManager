@if (User.Identity.IsAuthenticated)
{
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">My Upcoming Races</div>
                <div class="panel-body">
                    @if (Model.Races.Count() > 0)
                    {
                        <table class="table table-condensed">
                            <tr>
                                <th>Date</th>
                                <th>Track</th>
                                <th>Series</th>
                                <th>Status</th>
                            </tr>

                            @foreach (var race in Model.Races)
                            {
                                <tr>
                                    <td>@race.RaceDate.ToShortDateString()</td>
                                    <td><a asp-page="/Race/Details" asp-route-Id="@race.Id">@race.Track.Name</a></td>
                                    <td>@race.Series.Name</td>
                                    <td><span class="@Model.GetStatusCssClass(race.Status.Value)">@race.Status</span></td>
                                </tr>

                            }

                        </table>

                    }
                    else
                    {
                        <span class="label label-info">No upcoming races.</span>

                    }
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">Feed Item</div>
                <div class="panel-body">
                    <p>
                        This section may eventually be a news feed.
                    </p>
                    <p>

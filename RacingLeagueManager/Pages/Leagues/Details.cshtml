@model RacingLeagueManager.Pages.Leagues.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>@Html.DisplayFor(model => model.League.Name)</h2>

<div>
    <a asp-page="../LeagueDriver/Index" asp-route-leagueId="@Model.League.Id">Members</a>
    <hr />

    <div class="panel panel-default">
        <div class="panel-heading"><strong>Details</strong></div>
        <div class="panel-body">
            @Html.DisplayFor(model => model.League.Description)
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.League.IsPublic)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.League.IsPublic)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.League.CreatedDate)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.League.CreatedDate)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.League.Owner)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.League.Owner.UserName)
            </dd>
        </dl>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-10">
                <strong>Series</strong>
            </div>
            <div class="col-md-2">
                <a asp-page="../Series/Create" asp-route-leagueId="@Model.League.Id">Create New</a>
            </div>
        </div>
        
   </div>
    <div class="panel-body">
        <table class="table">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Owner</th>
                <th></th>
            </tr>
            @foreach (var item in Model.League.Series)
            {
                <tr>
                    <td>
                        <a asp-page="../Series/Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Owner.UserName)
                    </td>
                    @*<td>
                        <a asp-page="../SeriesEntry/Create" asp-route-seriesId="@item.Id">New Entry</a>
                    </td>*@
                    @*<td>
                        <a asp-page="../Series/Edit" asp-route-id="@item.Id">Edit</a> |

                        <a asp-page="../Series/Delete" asp-route-id="@item.Id">Delete</a>
                    </td>*@
                </tr>
            }
        </table>
    </div>
</div>



</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.League.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
